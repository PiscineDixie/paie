<h1>Rapports</h1>

<h4>Retenues gouvernementales</h4>
<%= form_tag({:controller => 'periodes', :action => 'gouv'}, {class: "form-horizontal"}) do %>
  <div class="form-group">
    <label class="control-label col-sm-1">Début</label>
    <div class="col-sm-3 col-lg-2">
     <%= select_tag(:premiere, options_for_select(FeuilleGroupe.candidates), {class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-1">Fin</label>
    <div class="col-sm-3 col-lg-2">
     <%= select_tag(:derniere, options_for_select(FeuilleGroupe.candidates), {class: "form-control"}) %>
     </div>
  </div>
  <%= submit_tag "Générer", :class => "btn btn-default"  %>
<% end %>
<hr/>

<h4>Heures-Activités</h4>
<%= form_tag({:controller => 'feuille_groupes', :action => 'heures'}, {class: "form-horizontal"}) do %>
  <div class="form-group">
    <label class="control-label col-sm-1">Début</label>
    <div class="col-sm-3 col-lg-2">
     <%= text_field_tag('debut', Date.new(Date.today.year, 1, 1), {type: 'date', class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-1">Fin</label>
    <div class="col-sm-3 col-lg-2">
      <%= text_field_tag('fin', Date.today, {type: 'date', class: "form-control"})  %>
     </div>
  </div>
  <%= submit_tag "Générer", :class => "btn btn-default"  %>
<% end %>
<hr/>

<h4>T4</h4>
<%= form_tag({:controller => 'employeurs', :id => Employeur.instance.id, :action => 't4'}, {class: "form-horizontal"}) do %>
  <div class="form-group">
    <label class="control-label col-sm-2">Année</label>
    <div class="col-sm-3 col-lg-2">
      <%= select_tag :annee, options_for_select([ 2015,2016,2017,2018,2019,2020 ]), class: 'form-control' %>
    </div>
   </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Destinataire:</label>
    <div class="col-sm-3 col-lg-2">
      <%= select_tag(:dest, options_for_select([ "gouvernement", "employe" ]), class: 'form-control') %>
    </div>
   </div>
   
  <%= submit_tag "Générer", :class => "btn btn-default"  %>
<% end %>
</p>
