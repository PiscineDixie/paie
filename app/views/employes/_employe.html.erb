
<%= form_for(@employe) do |f| %>

 <%= f.error_messages %>

  <table>
    <tr>
      <td>Prénom</td>
      <td><%= f.text_field :prenom, :size => 20 %></td>
    </tr>
    <tr>
      <td>Nom</td>
      <td><%= f.text_field :nom, :size => 20 %></td>
    </tr>
    <tr>
      <td>Etat</td>
      <td><%= f.select :etat, Employe::Etats %></td>
    </tr>
    <tr>
      <td>Adresse</td>
      <td><%= f.text_field :adresse1, :size => 20 %></td>
    </tr>
    <tr>
      <td>Adresse</td>
      <td><%= f.text_field :adresse2, :size => 20 %></td>
    </tr>
    <tr>
      <td>Adresse</td>
      <td><%= f.text_field :adresse3, :size => 20 %></td>
    </tr>
    <tr>
      <td>NAS</td>
      <td><%= f.text_field :nas, :size => 9 %></td>
    </tr>
    <tr>
      <td>Courriel</td>
      <td><%= f.text_field :courriel, :size => 20 %></td>
    </tr>
    <tr>
      <td>Expédié courriel par paie?</td>
      <td><%= f.select :courriel_sommaire, {'oui' => 1, 'non' => 0}, :selected => (@employe.courriel_sommaire ? 1 : 0) %></td>
    </tr>
    <tr>
      <td>Date de naissance</td>
      <td><%= f.date_select :naissance, :start_year => Date.today.year - 30, :end_year => Date.today.year - 14 %></td>
    </tr>
    <tr>
      <td>Salaire horaire</td>
      <td><%= f.text_field :salaire_horaire, :size => 5 %></td>
    </tr>
    <tr>
      <td>Exempte d'impôt</td>
      <td><%= f.select :exempte_impot, {'oui' => 1, 'non' => 0}, :selected => (@employe.exempte_impot ? 1 : 0) %></td>
    </tr>
    <tr>
      <td>Exemption impôt fédéral (TD1) </td>
      <td><%= f.text_field :exemption_fed, :size => 5 %></td>
    </tr>
    <tr>
      <td>Exemption impôt provincial (TP-1015.3) </td>
      <td><%= f.text_field :exemption_prov, :size => 5 %></td>
    </tr>
    
  </table>
  <p>
    <%= f.submit button_name, :class => "submit" %>
  </p>
<% end %>

